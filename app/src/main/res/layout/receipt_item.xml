<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="order"
            type="com.qifan.bestwing_pos.Model.Order"/>
    </data>

    <RelativeLayout
        android:id="@+id/itemBox"
        android:background="@{ safeUnbox(order.Select) ? @android:color/holo_orange_light : @android:color/holo_red_light }"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/QuantityControl"
            android:orientation="horizontal"
            tools:background="@android:color/holo_blue_light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Detail"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Side"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_toStartOf="@id/QuantityControl"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="@android:color/holo_red_light"
            >
            <TextView
                android:textSize="50sp"
                android:id="@+id/itemName"
                android:layout_weight="0.7"
                android:text="@{order.itemName}"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="15sp"
                android:text="@{order.itemDetail}"
                android:id="@+id/itemDetail"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="30dp"
                android:id="@+id/itemSides"
                android:layout_weight="1"
                tools:text="Side"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/QuantityControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/deleteItem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_x_black" />

            <ImageView
                android:id="@+id/duplicateItem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_content_copy_black_24dp" />




        </LinearLayout>
    </RelativeLayout>
</layout>